#!/usr/bin/env php
<?php

set_time_limit(0);

$loader = require __DIR__.'/../vendor/autoload.php';
\Doctrine\Common\Annotations\AnnotationRegistry::registerLoader([$loader, 'loadClass']);

$kernel = new \Simplex\Kernel(__DIR__ . '/../');
$kernel->boot();

$application = new \Simplex\ConsoleApplication($kernel);
$application->run();
