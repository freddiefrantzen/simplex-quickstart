#!/usr/bin/env php
<?php

set_time_limit(0);

$loader = require __DIR__.'/../vendor/autoload.php';
\Doctrine\Common\Annotations\AnnotationRegistry::registerLoader([$loader, 'loadClass']);

$container = (new \Simplex\ContainerBuilder(new \SplFileInfo(__DIR__ . '/../config')))->build();

$application = new \Simplex\ConsoleApplication($container);
$application->run();
